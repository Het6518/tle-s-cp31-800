#include <bits/stdc++.h>
using namespace std;

int main() {
    int n; // Number of elements in the array
    cin >> n;

    int arr[n]; // Array to store n integers
    int m = INT_MAX; // Initialize m to the maximum possible integer value

    // Input the array elements
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // Find the minimum absolute value in the array
    for (int i = 0; i < n; i++) {
        m = min(m, abs(arr[i])); // Update m with the smallest absolute value
    }

    // Output the smallest absolute value
    cout << m;

    return 0;
}
